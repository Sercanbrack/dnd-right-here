<div class="container float-left detail-screen">
            <form>
         <div class="form-row">
             <div class="form-group col-6">
                       <span>{{character.name}}</span>
             <div class="form-group col-6">
                 <div class="form-row">
                     <div class="form-group col">
                        <span>{{character.class}}</span>
                    </div>
                     <div class="form-group col">
                        <label for="inputPlayer">Player:</label>
                        <input type="text" class="form-control" id="inputPlayer" placeholder="Player">
                    </div>
                </div>
                 <div class="form-row">
                     <div class="form-group col">
                       <span>{{character.race}}</span>
                    </div>
                     <div class="form-group col">
                        <span>{{character.level}}</span>
                    </div> 
                </div>
            </div>
        </div>

         <div class="form-row">
            <div class="form-group col-4">
                <span>{{character.strength}}</span>>     
            <div class="form-group col-4">
                <span>{{character.armorClass}}</span>
            </div>
             <div class="form-group col-4">
                 <div class="row">
                     <div class="form-group col-2">
                        <span>{{character.hitpoints}}</span>
                    </div>
                </div>
            </div>
        </div>

         <div class="form-row">
             <div class="form-group col-3">
                 <div class="form-row">
                     <span>{{character.dexterity}}</span>
                </div>
                 <div class="form-row">
                     <span>{{character.constitution}}</span>
                </div>
                 <div class="form-row">
                    <span>{{character.intelligence}}</span>
                </div>
                 <div class="form-row">
                    <span>{{character.wisdom}}</span>
                </div>
                 <div class="form-row">
                    <span>{{character.charisma}}</span>
                </div>
            </div>
             <div class="form-group col-9">
                <span>{{character.attacks}}</span>
            </div>
             <div class="form-group col-9">
                <span>{{character.spells}}</span>
            </div>
        </div>
            </form>
    <p><button data-id="{{character.id}}" id="deleteButton" type="button" class="m-3 p-2 bg-dark text-light">Delete Character</button></p> 
</div>
<div>
        <div class="row">
            <div class="col-8 card">
                <div class="pl-2 pt-2 pb-2 text-white bg-secondary card-top">
                    <div class="card-title">
                        <h3>Dice</h3>
                    </div>  
                </div>
                <div class="card-body bg-light">
                    <div class="form-group col">
                        <input type="text" class="form-control" id="inputRollAmt" placeholder="1-9">
                        <select name="dice-rolled" id="diceRolled">
                            <option value="2">d2</option>
                            <option value="4">d4</option>
                            <option value="6">d6</option>
                            <option value="8">d8</option>
                            <option value="10">d10</option>
                            <option value="12">d12</option>
                            <option value="20">d20</option>
                            <option value="100">d100</option>
                        </select>
                        <button type="button" class="m-3 p-2 bg-dark text-light" id="rollButton">Roll</button>
                    </div>
                    <label for="rollOutput">Result:</label>
                    <span style="text-decoration: underline" id="rollOutput"></span>
                </div>
            </div>
        </div>
    </div>
<script src="../../js/detail.js"></script>
<script src="/js/dice.js"></script>
